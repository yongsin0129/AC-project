<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="user1@example.com" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="12345678">
        </div>
        <div class="d-grid mt-2 gap-2">
          <button type="submit" class="btn btn-info btn-block">Login</button>
          <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook Login</a>
        </div>
      </form>
      <p class="lead mt-4">
        No Account?   <a href="/users/register">click here to Register</a>
      </p>

    </div>
  </div>
</div>